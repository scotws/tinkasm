; A Tinkerer's Assembler for the 6502/65c02/65816
; Syntax demonstration for the 65816

        .mpu 65816
        .ORIGIN e000

        .macro frog
                inx     ; first macro line
                iny     ; second macro line 
        .endmacro

        .equ frog 0000
        .equ pig { frog + 1 }
        .equ fish .lsb frog
        .equ goat .msb { pig + 2 }

solo_label
                lda.# 00        ; my inline-comment
                lda.# { 0 + 0 }
                iny
                lda.l 00:1000
                BRA solo_label  ; upper case!
                jmp full

                mvp 00,01
        
        ; another comment, indented

lbl+comment ; I'm the comment

        .EMULATED  ; upper case!
        .native    
        .a16       ; another inline-comment
        .xy16
                lda.# { 0 + 0 }

full    .a8     ; label with directive and comment
        .!a8
fuller          lda.# 00  ; label with instruction and comment
                lda.# { 0 + 0 }

        .invoke frog 
        .include includeme.tasm

        .byte 1, %00000010, &2, 'a', "aaa", .lsb { 8000 + 11 }
        .word 1000, 2000, 3000
        .long 01aaaa, 02bbbb

        .end
